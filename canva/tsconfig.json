{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es2019"],
    "types": ["node", "webpack-env"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "module": "ESNext",
    "noImplicitAny": true,
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": ["./src/**/*", "./declarations/**/*"],
  "exclude": ["node_modules", "dist"]
}
